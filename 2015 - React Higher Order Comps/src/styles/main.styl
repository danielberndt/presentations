@import 'bespoke-theme-cube/lib/theme'

article {
  // background-color: #eaeaea;
  background-color: #999;
  background: radial-gradient(ellipse at center, rgba(96,96,96,1) 0%,rgba(50,50,50,1) 100%);
}

.angular-feeling {
  position: relative;
  margin-left:-100px;
}

.angular-meh {
  position: absolute;
  left: 100%;
  margin-left:-20px;
  top: 38px;
}

.react-logo {
  animation: spin 5s infinite linear;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(359deg);
  }
}

.img-container {
  position: relative;
}

.img-overlay {
  position:absolute;
  display:block;
  top:0;left:0;
  right:0;bottom:0;
}

small {
  color: #777;
}

pre[class*="language-"] {
  margin:0;
  padding: 0.2em 1.5em !important;
}

blockquote {
  text-align: left;
  padding-left:20px;
  border-left: 10px solid #aaa;
  font-style: italic;
}